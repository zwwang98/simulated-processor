cmake_minimum_required(VERSION 2.8.2)

project(ext/googletest/download NONE)

include(ExternalProject)
ExternalProject_Add(googletest
  GIT_REPOSITORY    https://github.com/google/googletest.git
  GIT_TAG           release-1.8.1
  SOURCE_DIR        "${CMAKE_BINARY_DIR}/ext/googletest/src"
  BINARY_DIR        "${CMAKE_BINARY_DIR}/ext/googletest/build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

project(ext/boost/download NONE)

ExternalProject_Add(
    boost
    PREFIX ${CMAKE_BINARY_DIR}/ext/boost
    GIT_REPOSITORY https://github.com/boostorg/boost.git
    GIT_TAG "boost-1.77.0"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND b2 --with-regex --with-thread --with-chrono toolset=gcc variant=debug link=static install --prefix=${CMAKE_BINARY_DIR}/ext/boostinstall
    BUILD_IN_SOURCE 1
    INSTALL_COMMAND ""
)
